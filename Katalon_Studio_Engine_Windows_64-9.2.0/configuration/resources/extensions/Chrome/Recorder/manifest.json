{
	"manifest_version": 3,
	"name": "Katalon Recorder",
	"description": "Object Recorder Chrome extension for Katalon",
	"version": "4.0.0",
	"permissions": [
		"tabs",
		"storage"
	],
	"host_permissions": [
		"http://*/", 
		"https://*/"
	],
	"content_scripts": [
		{
			"all_frames": true,
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"match_about_blank": true,
			"js": [
				"jquery-1.11.2.min.js",
				"constants.js",
				"chrome_variables_default.js",
				"chrome_variables_init.js",
				"chrome_common.js",
				"chrome_setup.js",
				"common.js", 
				"record_common.js",
				"dom_recorder.js",
				"main.js"
			]
		}
	],
	"background": {
        "service_worker": "service_worker.js"
    },
	"action": {
		"default_icon": {
			"24": "images/record_28.png"
		},
			"default_title": "Katalon Recorder",
			"default_popup": "popup.html"
		}
}